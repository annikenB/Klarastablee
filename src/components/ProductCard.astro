---
const {
  title = "Standard produkt",
  price = "Pris ikke oppgitt",
  details = "Produktdetaljer kommer her.",
  otherInfo = "Annen info som levering, vilkår osv.",
  buttonLabel = "Knap her",
} = Astro.props;
---

<div class="p-6 sticky top-4 self-start max-w-md">
  <div>
    <h2 class="t font-semibold text-primary-800">{title}</h2>
    <p class="leading-relaxed mt-2 text-primary-00">{price}</p>
  </div>

  <!-- prøvd å lage link som button-->
  <div class="mb-6">
    <a
      href="/stepone"
      class="bg-beige-100 text-primary-500 px-4 py-2 border-2 border-primary-500 hover:text-primary-500 transition inline-block text-center"
    >
      <p>start your order</p>
    </a>
  </div>

  <!-- valg av tilleggs/detaljer info -->
  <div class="flex border-b border-gray-300">
    <div class="flex flex-col">
      <input type="radio" name="tabs" id="tab1" class="hidden peer" checked />
      <label
        for="tab1"
        class="cursor-pointer px-4 py-2 text-gray-600 peer-checked:text-primary-500 peer-checked:border-b-2 peer-checked:border-primary-500"
      >
        <h5 class="hover:text-primary-500">Detaljer</h5>
      </label>
      <div class="hidden peer-checked:block mt-4">
        <p class="text-gray-700">{details}</p>
      </div>
    </div>

    <div class="flex flex-col ml-8">
      <input type="radio" name="tabs" id="tab2" class="hidden peer" />
      <label
        for="tab2"
        class="cursor-pointer px-4 py-2 text-gray-600 peer-checked:text-primary-500 peer-checked:border-b-2 peer-checked:border-primary-500"
      >
        <h5 class="hover:text-primary-500">Annen info</h5>
      </label>
      <div class="hidden peer-checked:block mt-4">
        <p class="text-gray-700">{otherInfo}</p>
      </div>
    </div>
  </div>
</div>
