---
import Link from "../components/Link.astro";

const {
  title = "Produktnavn",
  image = "https://via.placeholder.com/300",
  price = "",
  buttonLabel = "Read More",
  href = "",
} = Astro.props;

const cardStyling = "bg-white p-4 transition";
const imageWrapperStyling = "relative overflow-hidden";
const imageStyling =
  "w-full object-contain mb-4 transition-transform duration-300 hover:scale-110";
const titleStyling = "font-semibold text-lg";
const priceStyling = "text-gray-600 mt-2";
const buttonWrapperStyling = "mt-4";
---

<article class={cardStyling}>
  <div class={imageWrapperStyling}>
    <img src={image} alt={title} class={imageStyling} />
  </div>

  <h3 class={titleStyling}>{title}</h3>
  {price && <p class={priceStyling}>{price}</p>}

  <div class={buttonWrapperStyling}>
    <Link href={href}>{buttonLabel}</Link>
  </div>
</article>
