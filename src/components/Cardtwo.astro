---
import Link from "../components/Link.astro"; // Husk riktig path

const {
  title = "Produktnavn",
  image = "https://via.placeholder.com/300",
  price = "",
  buttonLabel = "read more",
  slug = "",
} = Astro.props;

const link = `/singleview?product=${slug}`;
---

<article class="bg-white p-4 transition">
  <img src={image} alt={title} class="w-full object-cover rounded mb-4" />
  <h3 class="font-semibold">{title}</h3>
  {price && <p class="text-gray-600 mt-2">{price}</p>}

  <div class="mt-4">
    <Link href={link}>{buttonLabel}</Link>
  </div>
</article>
